        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <ul class="nav navbar-nav">
        <li><%= link_to "AKIKO'S BLOG", root_path %></li>
      </ul>    
    </div>

    <div class="collapse navbar-collapse pull-right" id="login">
      
        <ul class="nav navbar-nav ">
          <li>
            <%= link_to new_post_path do %>
            <i class="glyphicon glyphicon-plus-sign"></i>
            New Post
            <% end %>
          </li>
             <% if user_signed_in? %>
               <li class="user_signed_in"><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
