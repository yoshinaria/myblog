<div class="page-header col-xs-12 col-sm-8 col-sm-offset-2">
    <div class="blog-num">Blog NO.<%= @post.id %> - <%= @post.created_at.strftime("%d %b %y") %></div>
    <div class="title"><%= @post.title %></div>

<section>
  <p><i>Author: Akiko T.</i></p>
  <%= @post.content %></section>
<br>
<p>
  <% if current_user && current_user == @post.user %>
    <%= link_to "Edit", edit_post_path(@post) %>&nbsp;
    <%= link_to 'Delete', post_path(@post), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this?'} %>
    </p>
  <% end %>

</div>

<div class="col-xs-12 col-sm-8 col-sm-offset-2">
  <h3>Add a comment:</h3>
  <%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.text_field :message, :class => 'form-control' %>
    </p>
      <p>
      <%= f.submit %>
    </p>
  <% end %>
  <br><br>
  
  <div class="comment">
    <h3>Comments:</h3>
  
  <% @post.comments.each do |comment| %>
      <div class="col-xs-12 col-sm-12">
        <% if comment.present? %>
         <hr>
          <%= comment.message %>

        <% end %>
        
      </div>
  <% end %>
</div>